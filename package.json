    "karma-sauce-launcher": "^0.2.11",
    "karma-spec-reporter": "0.0.19",
    "mocha": "^2.2.5",
    "phantomjs": "^1.9.17",
    "power-assert": "^0.11.0",
    "should": "^7.0.1"
  },
  "scripts": {
    "test": "rm -rf coverage && karma start karma.local.conf.js",
    "test-sl": "karma start karma.saucelabs.conf.js",
